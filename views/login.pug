extends layout

block content
  #login-form.form
    form(method="POST", action="/login")
      .form-group
        label(for="uname") User Name
        input#uname(
          name="uname",
          type="text",
          value=undefined === uname ? "" : uname
        )

      .form-group
        label(for="pass") Password
        input#pass(
          name="pass",
          type="password",
          value=undefined === pass ? "" : pass
        )

      .form-group
        if error
          p(style="color: red; text-align: center")= error
      .form-group
        a(href="/signup") Create An Account?
        button#submit(type="submit") Login
