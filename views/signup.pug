extends layout 

block content 

    div.form
        form(method='POST' action='/register')
            label(for="fname") First Name  
            input(name="fname" id="fname" type="text" value=undefined === fname ? '' : fname)
        
            label(for="lname") Last Name  
            input(name="lname" id="lname" type="text" value=undefined === lname ? '' : lname)
            
            label(for="uname") User Name  
            input(name="uname" id="uname" type="text" value=undefined === uname ? '' : uname)
            
            label(for="pass") Password
            input(name="pass" id="pass" type="password" value=undefined === pass ? '' : pass)
            
            label(for="cpass") Confirm Password 
            input(name="cpass" id="cpass" type="password" value=undefined === cpass ? '' : cpass)

            button#signup(type="submit") Signup

    if errors
        ul
        each err in errors 
                li= err.msg